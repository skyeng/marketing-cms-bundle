<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Skyeng\MarketingCmsBundle\Domain\Entity\Resource" table="cms_resource"
            repository-class="Skyeng\MarketingCmsBundle\Infrastructure\Doctrine\Repository\ResourceRepository">
        <id name="id" type="cms_id"/>
        <field name="uri" type="cms_uri" unique="true"/>
        <field name="type" type="cms_resource_type"/>
    </entity>

</doctrine-mapping>
