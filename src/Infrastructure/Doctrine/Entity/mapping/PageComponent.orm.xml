<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Skyeng\MarketingCmsBundle\Domain\Entity\PageComponent" table="cms_page_component"
            repository-class="Skyeng\MarketingCmsBundle\Infrastructure\Doctrine\Repository\PageComponentRepository">
        <id name="id" type="cms_id"/>
        <many-to-one field="page" target-entity="Skyeng\MarketingCmsBundle\Domain\Entity\Page" inversed-by="components">
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>
        <field name="name" type="page_component_name"/>
        <field name="data" type="json_array"/>
        <field name="order" column="component_order" type="integer"/>
        <field name="isPublished" type="boolean"/>
    </entity>

</doctrine-mapping>
